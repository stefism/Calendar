@model ICollection<Calendar.App.ViewModels.AllReservationViewModel>
@{
    ViewData["Title"] = "All reservations";
}

<h3>@ViewData["Title"]</h3>
<hr />

<section>
    <table class="table table-hover">
        <tr>
            <th>Username</th>
            <th>Reserved date</th>
            <th>Price</th>
        </tr>

        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.Username</td>
                <td>@reservation.ReservedDate</td>
                <td>@reservation.Price</td>
            </tr>
        }
    </table>
</section>
<hr />
